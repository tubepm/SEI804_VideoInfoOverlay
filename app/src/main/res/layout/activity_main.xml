<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp">

    <!-- 右侧TextView (锚点元素) -->
    <TextView
        android:id="@+id/overlayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:text="@string/starting"
        android:textSize="14sp"
        android:includeFontPadding="false"/>
    
    <!-- 左侧TextView (连接到右侧TextView) -->
    <TextView
        android:id="@+id/overlayTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/overlayTextView"
        android:layout_alignTop="@id/overlayTextView"
        android:layout_alignBottom="@id/overlayTextView"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingStart="12dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:fontFamily="monospace"/>

</RelativeLayout>
