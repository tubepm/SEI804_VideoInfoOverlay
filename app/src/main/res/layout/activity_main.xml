<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"> <TextView
        android:id="@+id/tv_label_video"
        android:layout_width="wrap_content"  android:layout_height="wrap_content"
        android:text="@string/video_label"   android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_value_video"
        android:layout_width="0dp"  android:layout_height="wrap_content"
        android:text="3840 x 2160, 60Hz"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginStart="8dp"  app:layout_constraintStart_toEndOf="@id/tv_label_video" app:layout_constraintEnd_toEndOf="parent"  app:layout_constraintTop_toTopOf="@id/tv_label_video"
        app:layout_constraintBottom_toBottomOf="@id/tv_label_video"
        android:gravity="start" /> </androidx.constraintlayout.widget.ConstraintLayout>
